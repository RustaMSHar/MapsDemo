<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MapsDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MapsDemo"
    xmlns:View="clr-namespace:MapsDemo.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        
        <ShellContent
            Title="Карта"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" 
            Icon="{OnPlatform 'globe.png', iOS='globe.png', MacCatalyst='globe.png'}" />

        <ShellContent
            Title="Рейсы"
            ContentTemplate="{DataTemplate View:SearchPage}"
            Route="SearchPage"
            Icon="{OnPlatform 'map_pin.png', iOS='map_pin.png', MacCatalyst='map_pin.png'}"/>

    </TabBar>
    
</Shell>
