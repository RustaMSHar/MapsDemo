<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MapsDemo.Pages.FlightDetailsPage">

    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Детали Рейса" FontSize="24" Margin="0,10"/>

            <Label Text="Рейс:" FontSize="18"/>
            <Label Text="{Binding FlightDetails.IataNumber}" FontSize="16"/>

            <Label Text="Статус:" FontSize="18"/>
            <Label Text="{Binding Status}" FontSize="16"/>

            <Label Text="Авиакомпания:" FontSize="18"/>
            <Label Text="{Binding Airline.IataCode}" FontSize="16"/>

            <Label Text="Отправление:" FontSize="18"/>
            <Label Text="{Binding Departure.IataCode}" FontSize="16"/>

            <Label Text="Прибытие:" FontSize="18"/>
            <Label Text="{Binding Arrival.IataCode}" FontSize="16"/>

            <!-- Добавьте другие необходимые детали рейса -->
        </StackLayout>
    </ScrollView>

</ContentPage>
